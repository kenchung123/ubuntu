@model IEnumerable<Example_04.Models.Student>

@{
    ViewData["Title"] = "Index";
    
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
<body>
<h1 align="center">Danh sách sinh viên</h1>

<p>
    <span class="btn btn-success"><a asp-action="Create" style="color: white; text-decoration: none;" > <i class="fa fa-user-plus" style="font-size: 35px;"></i> Thêm sinh viên</a> </span>
</p>
<table class="table">
    <thead>
    <tr class="table-danger">
        <th>
            @Html.DisplayNameFor(model => model.MaSv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        <th>Thao tác</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                <a class="btn btn-success"  asp-action="Edit" asp-route-id="@item.Id" ><i class="fa fa-pencil" aria-hidden="true" style="font-size: 20px; text-align: center;"></i></a> 
                @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> | *@
                <a class="btn btn-success"  asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash-o" aria-hidden="true" style="font-size: 20px; text-align: center;"></i></a>
            </td>
        </tr>
    }
    </tbody>
</table>
</body>